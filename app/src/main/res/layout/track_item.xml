<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/trackItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal"
    android:paddingStart="13dp"
    android:paddingEnd="@dimen/_12dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <ImageView
        android:id="@+id/trackItemImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_gravity="center|start"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="66dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingBottom="@dimen/_8dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/trackItemName"
            android:layout_marginBottom="1dp"
            tools:text="Track Name"
            style="@style/SettingsTrackItemNameStyle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/trackItemArtistName"
                tools:text="Artist Name"
                style="@style/SettingsTrackItemTextStyle"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dot_mini_icon"
                android:backgroundTint="@color/search_content_color2"
                />

            <TextView
                android:id="@+id/trackItemTime"
                tools:text="1:00"
                style="@style/SettingsTrackItemTextStyle"
                />



        </LinearLayout>



    </LinearLayout>

    <ImageView
        android:background="@drawable/arrow_forward"
        style="@style/SettingsButtonIconStyle"
        />




</FrameLayout>