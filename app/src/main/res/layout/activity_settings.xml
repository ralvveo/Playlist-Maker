<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="@dimen/_12dp"
        android:layout_marginLeft="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="24dp"
        >

        <ImageView
            android:id="@+id/settings_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_back"
            android:layout_gravity="center|start"
            app:backgroundTint="@color/settings_arrowback"
            android:layout_marginRight="@dimen/_12dp"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:foreground="?attr/selectableItemBackground"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:fontFamily="@font/ys_display_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/settings_text"
            android:textSize="@dimen/_22sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_marginLeft="@dimen/_12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableTint="#0B0A0A"
            android:gravity="center|start"
            android:letterSpacing="0"
            android:paddingLeft="@dimen/_16dp"
            android:text="@string/dark_theme"
            android:textAllCaps="false"
            android:textColor="@color/settings_text"
            android:textSize="@dimen/_16sp"
            app:backgroundTint="@color/white"
            android:paddingRight="@dimen/_12dp"
            android:paddingTop="@dimen/_22dp"
            android:paddingBottom="@dimen/_22dp"
             />


        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/settings_button_share"
            style="@style/SettingsButtonStyle"
            >

            <TextView
                android:text="@string/share_app"
                style="@style/SettingsButtonTextStyle"
                />

            <ImageView
                android:background="@drawable/share_button"
                style="@style/SettingsButtonIconStyle"
                />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/settings_button_support"
            style="@style/SettingsButtonStyle"
            >

            <TextView
                android:text="@string/write_to_support"
                style="@style/SettingsButtonTextStyle"
                />

            <ImageView
                android:background="@drawable/support_button"
                style="@style/SettingsButtonIconStyle"
                />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/settings_button_assignment"
            style="@style/SettingsButtonStyle"
            >

            <TextView
                android:text="@string/user_assignment"
                style="@style/SettingsButtonTextStyle"
                />

            <ImageView
                android:background="@drawable/arrow_forward"
                style="@style/SettingsButtonIconStyle"
                />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>








