<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.practicum.playlistmaker.playlist.ui.fragment.PlaylistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/audioplayer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/playlistArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/black_arrow_back" />

        <ImageView
            android:id="@+id/playlistImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="@dimen/_16dp"
            android:background="@drawable/audioplayer_placeholder"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playlistArrowBack" />

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_16dp"
            android:fontFamily="@font/ys_display_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playlistImage"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/playlistYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playlistName"
            tools:text="2022" />


        <TextView
            android:id="@+id/playlistLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_8dp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playlistYear"
            tools:text="300 минут" />

        <ImageView
            android:id="@+id/miniDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_mini_icon"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/playlistLength"
            app:layout_constraintStart_toEndOf="@id/playlistLength"
            app:layout_constraintTop_toTopOf="@id/playlistLength" />

        <TextView
            android:id="@+id/playlistTrackCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="@id/playlistLength"
            app:layout_constraintStart_toEndOf="@id/miniDot"
            app:layout_constraintTop_toTopOf="@+id/playlistLength"
            tools:text="98 треков" />

        <ImageButton
            android:id="@+id/shareIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/share_button"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playlistLength" />

        <ImageButton
            android:id="@+id/moreIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16dp"
            android:background="@drawable/more_button"
            android:backgroundTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/shareIcon"
            app:layout_constraintStart_toEndOf="@id/shareIcon"
            app:layout_constraintTop_toTopOf="@id/shareIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_rounded_bg"
        android:gravity="center_horizontal"
        android:minHeight="20dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="250dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="@dimen/_8dp"
                    android:layout_marginBottom="@dimen/_8dp"
                    android:background="@color/grey_white" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_sheet2"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/bottom_sheet_rounded_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="505dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <View
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_8dp"
            android:background="@color/grey_white" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/playlistImageBottomSheet"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_16dp"
                tools:background="@color/black"
                />


            <TextView
                android:id="@+id/playlistNameBottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/playlistImageBottomSheet"
                app:layout_constraintTop_toTopOf="@id/playlistImageBottomSheet"
                app:layout_constraintBottom_toTopOf="@id/playlistTrackCountBottomSheet"
                android:layout_marginStart="@dimen/_8dp"
                tools:text="Best songs 2021"
                android:textColor="@color/black_white"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/_16sp"
                />

            <TextView
                android:id="@+id/playlistTrackCountBottomSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/playlistImageBottomSheet"
                app:layout_constraintTop_toBottomOf="@id/playlistNameBottomSheet"
                app:layout_constraintBottom_toBottomOf="@id/playlistImageBottomSheet"
                android:layout_marginStart="@dimen/_8dp"
                tools:text="98 треков"
                android:textColor="@color/search_content_color2"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                />


            <ImageButton
                android:id="@+id/buttonShareBottomSheet"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlistImageBottomSheet"
                android:layout_marginTop="@dimen/_16dp"
                />

            <TextView
                android:id="@+id/buttonShareBottomSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonShareBottomSheet"
                app:layout_constraintBottom_toBottomOf="@id/buttonShareBottomSheet"
                android:textSize="16sp"
                android:textColor="@color/black_white"
                android:fontFamily="@font/ys_display_regular"
                android:layout_marginStart="@dimen/_16dp"
                android:text="@string/share"
                />

            <ImageButton
                android:id="@+id/buttonChangeBottomSheet"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonShareBottomSheet"
                />

            <TextView
                android:id="@+id/buttonChangeBottomSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonChangeBottomSheet"
                app:layout_constraintBottom_toBottomOf="@id/buttonChangeBottomSheet"
                android:textSize="16sp"
                android:textColor="@color/black_white"
                android:fontFamily="@font/ys_display_regular"
                android:layout_marginStart="@dimen/_16dp"
                android:text="@string/change_info"
                />


            <ImageButton
                android:id="@+id/buttonDeleteBottomSheet"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonChangeBottomSheet"
                />

            <TextView
                android:id="@+id/buttonDeleteBottomSheetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonDeleteBottomSheet"
                app:layout_constraintBottom_toBottomOf="@id/buttonDeleteBottomSheet"
                android:textSize="16sp"
                android:textColor="@color/black_white"
                android:fontFamily="@font/ys_display_regular"
                android:layout_marginStart="@dimen/_16dp"
                android:text="@string/delete_playlist"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>