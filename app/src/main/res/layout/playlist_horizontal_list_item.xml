<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_black">
    
    
    <ImageView
        android:id="@+id/playlistImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:background="@drawable/playlist_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_12dp"

        />

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/playlistImage"
        app:layout_constraintTop_toTopOf="@id/playlistImage"
        app:layout_constraintBottom_toTopOf="@id/playlistTrackCount"
        android:layout_marginStart="@dimen/_8dp"
        tools:text="Best songs 2021"
        android:textColor="@color/black_white"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/playlistTrackCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/playlistImage"
        app:layout_constraintTop_toBottomOf="@id/playlistName"
        app:layout_constraintBottom_toBottomOf="@id/playlistImage"
        android:layout_marginStart="@dimen/_8dp"
        tools:text="98 треков"
        android:textColor="@color/black_white"
        android:textSize="11sp"
        android:fontFamily="@font/ys_display_regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>